<% if session[:message] %>
  <div class="message"> <%= session.delete(:message) %> </div>
<% end %>

<h2>Sign In</h2>
<form action="/users/signin" method="post">
  Username: <input name="username" type="text" value=<%= params[:username] %> ></input><br>
  Password: <input name="password" type="password"></input><br>
  <button type='submit'>Sign In</button>
</form>

<h3>New User?</h3>
<form action="/users/signup" method="get">
	<button type="submit">Sign Up</button>
</form>